doctype html
html
  head
    link(rel="stylesheet", href="../css/semantic.min.css")
    script(src="../js/jquery.min.js")
    script(src="../js/semantic.min.js")
  body
    form.ui.form
      .ui.segments
        .ui.segment.attached
          .ui.container(style="overflow:hidden;") {{ .Path }}
        .ui.segment.attached.expand
          .ui.three.item.tabular.menu.attached.top
            a.item.active(data-tab="md5") MD5
            a.item(data-tab="sha1") SHA-1
            a.item(data-tab="sha256") SHA-256
          .ui.tab.segment.attached.bottom.active(data-tab="md5")
            .ui.container(style="overflow:hidden;") {{ .Md5 }}
          .ui.tab.segment.attached.bottom(data-tab="sha1")
            .ui.container(style="overflow:hidden;") {{ .Sha1 }}
          .ui.tab.segment.attached.bottom(data-tab="sha256")
            .ui.container(style="overflow:hidden;") {{ .Sha256 }}
          .ui.tab.segment.attached.bottom
        .ui.two.buttons.attached(style="position:fixed;bottom:0;left:0;right:0;")
            button.ui.yellow.button(type="submit" formmethod="post" formaction="../config/") Config
            button.ui.red.button(type="button" name="quit" onclick="window.close();") Quit
    style
      | .expand{
      |   height: 152px;
      | }
      | button{
      |   height: 38px;
      | }
    script
      | $('.menu .item')
      |   .tab()
      | ;
